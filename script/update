#!/usr/bin/env bash

function home_update {
  local shome="${_defn_home_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"
  source "$shome/script/profile"

  block compile service

  local virt_role="$(facts '.virtualization_role')"

  case "$virt_role" in
    host|"")
      for a in plane van hotel snow; do
        for b in virtualbox vmware; do
          $a $b update
        done
      done
      ;;
  esac
}

home_update "$@"
