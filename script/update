#!/usr/bin/env bash

function home_update {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  mkdir -p "$SVDIR"

  block compile service

  ln -nfs "$BLOCK_PATH/limbo/sv/squid" "$SVDIR/squid"
  ln -nfs "$shome/sv/apt-mirror" "$SVDIR/apt-mirror"
}

home_update "$@"
