#!/usr/bin/env bash

function home_bootstrap {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"

  local fl_first=
  local cmd_app="$(which app 2>&- || true)"
  if [[ ! -x "$cmd_app" ]]; then
    if [[ ! -d "$shome/work/app" ]]; then
      git clone git@github.com:defn/app "$shome/work/app"
      (cd "$shome/work/app" && script/bootstrap)
      fl_first=1
    fi
  fi

  "$shome/script/update"
  source "$shome/script/profile"

  if [[ -n "$fl_first" ]]; then
    for a in sub app jq pkgsrc python ansible aws gcloud letsencrypt erlang elixir \
             phoenix ruby rocco tugboat node dnsimple cue junas defn runmany deploy \
             virtualbox packer vagrant ubuntu boxcar; do
      git clone git@github.com:defn/app-$a work/$a || git clone git@github.com:defn/$a work/$a || true
      (cd work/$a && git pull)
    done

    app bootstrap
  else
    "$shome/script/build"
  fi
}

home_bootstrap "$@"
