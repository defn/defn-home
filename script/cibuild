#!/usr/bin/env bash

function home_cibuild {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"

  mkdir -p "$shome/work"
  pushd "$shome/work"
  git clone git@github.com:defn/block || true
  popd

  pushd "$shome/work/block"
  git fetch
  git reset --hard origin/master
  script/cibuild "$@"
  source script/profile
  popd

  block lock sync
  block bootstrap
}

home_cibuild "$@"
