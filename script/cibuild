#!/usr/bin/env bash

function home_cibuild {
  local shome="${_defn_home_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"

  mkdir -p "$shome/work"
  git clone git@github.com:defn/block "$shome/work/block" 2>&- || true

  "$shome/work/block/script/cibuild" "$@"

  source "$shome/work/block/script/profile" "$@"

  facts cache
}

home_cibuild "$@"
