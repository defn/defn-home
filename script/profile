#!/usr/bin/env bash

export APP_PATH="$HOME/work"

function source_app {
  source "$APP_PATH/app/script/profile" || return 1
  source app_shortcuts || return 1
}

function profile {
  local shome="$(unset CDPATH; cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
  PATH="$shome/bin:$shome/exec:$shome/node_modules/.bin:$PATH"

  source_app || return 1

  require virtualenv ansible aws gcloud letsencrypt || return 1
  require erlang elixir || return 1
  require ruby rocco tugboat || return 1
  require node dnsimple || return 1
  require go || return 1
  require jq || return 1
  require cue junas defn || return 1
  require runmany deploy || return 1
}

profile || echo "ERROR: something's wrong with a required profile"
