#!/usr/bin/env bash

function profile {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  PATH="$shome/bin:$shome/exec:$shome/node_modules/.bin:$PATH"

  source "$shome/work/app/script/profile" # TODO possible to get rid of this?
  require sub
  require jq

  source app_strict

  source home_terminal
  source home_cache

  if [[ -e "$shome/exec/home_secret" ]]; then
    source home_secret
  fi
}

profile
