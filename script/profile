#!/usr/bin/env bash

function source_app {
  source ~/work/app/script/profile || return 1
  source app_shortcuts || return 1
}

function profile {
  local shome="$(unset CDPATH; cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
  PATH="$shome/bin:$shome/exec:$shome/node_modules/.bin:$PATH"

  source_app || return 1

  if pushd ~/work 1>&-; then
    require virtualenv ansible aws letsencrypt || return 1
    require erlang elixir rocco || return 1
    require ruby rocco || return 1
    require node dnsimple || return 1
    require jq || return 1
    require cue junas defn || return 1
    require runmany deploy || return 1
    popd 1>&-
  fi
}

profile || echo "ERROR: something's wrong with a required profile"
