#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local nm_action="$1"; shift
  case "$nm_action" in
    up|destroy)
      vagrant "$nm_action" local "$@"
      ;;
    build|remove|add)
      virtualbox "$nm_action" "$@"
      ;;
    ssh|rsync|scp)
      vagrant local "$nm_action" "$@"
      ;;
  esac
}

source sub "$BASH_SOURCE" "$@"
