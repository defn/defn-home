cat .ssh/authorized_keys | vagrant ssh -- tee -a .ssh/authorized_keys

accept github.com, localhost ssh host keys

git clone git@github.com:defn/home

mv home/.git .
rm -rf home
git checkout .
rm -f .profile

for a in sub app jq pkgsrc python ansible aws gcloud letsencrypt erlang elixir \
         phoenix ruby rocco tugboat node dnsimple cue junas defn runmany deploy \
         virtualbox packer vagrant ubuntu boxcar; do 
  git clone git@github.com:defn/app-$a work/$a || git clone git@github.com:defn/$a work/$a || true
  (cd work/$a && git pull)
done

echo deb http://binaries.erlang-solutions.com/debian trusty contrib | sudo tee /etc/apt/sources.list.d/erlang.list
echo deb https://deb.nodesource.com/node_0.10 trusty main | sudo tee /etc/apt/sources.list.d/node.list

curl -s http://binaries.erlang-solutions.com/debian/erlang_solutions.asc | sudo apt-key add -
curl -s https://deb.nodesource.com/gpgkey/nodesource.gpg.key | sudo apt-key add -

sudo aptitude update
sudo aptitude install -y esl-erlang nodejs

(cd work/jq && script/bootstrap)
script/update
source .bash_profile
app bootstrap
require
app bootstrap

